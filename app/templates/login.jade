section.content-header
  h1 登陆
section.content
  .row.col-xs-12.col-sm-6
    p.login-box-msg 请登陆
    form
      .form-group.has-feedback
        input.form-control(placeholder='帐号', type='text')
        span.glyphicon.glyphicon-user.form-control-feedback
      .form-group.has-feedback
        input.form-control(placeholder='密码', type='password')
        span.glyphicon.glyphicon-lock.form-control-feedback
      .row
        .col-xs-6.col-md-4
          button.btn.btn-primary.btn-block(type='submit') 登陆
        .col-xs-6.col-md-4
          button.btn.btn-warning.btn-block(type='reset') 重置
